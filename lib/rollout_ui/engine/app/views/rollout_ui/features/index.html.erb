<%= form_tag(features_path, :id => 'create-new-feature') do %>
  <%= text_field_tag :name, :id => 'new-feature-name', :placeholder => 'Add a new feature' %>
  <%= submit_tag 'Create', :id => 'new-feature-submit' %>
<% end %>

<ul id="features">
  <% @features.each do |feature| %>
    <li id="<%= feature.name %>" class="feature clearfix"><%= render 'feature', :feature => feature %></li>
  <% end %>
</ul>

<% content_for :onready do %>
  $("select").chosen({no_results_text: "No groups matched"});
  $("input.users").chosen();

  $("select, input.users").change(function() {
    $(this).closest("form").submit();
  });
<% end %>
